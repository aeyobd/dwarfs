@article{cristallo+2009,
  title = {Evolution, Nucleosynthesis, and Yields of Low-Mass Asymptotic Giant Branch Stars at Different Metallicities},
  author = {Cristallo, S. and Straniero, O. and Gallino, R. and Piersanti, L. and Dom{\'i}nguez, I. and Lederer, M. T.},
