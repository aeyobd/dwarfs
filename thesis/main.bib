  keywords = {Astrophysics,galaxies: dwarf-galaxies: kinematics and dynamics-Local Group,to read},
  annotation = {ADS Bibcode: 2006MNRAS.367..387R},
  file = {/Users/daniel/Zotero/storage/6CYVQGRS/Read et al. - 2006 - The importance of tides for the Local Group dwarf spheroidals.pdf}
}

@article{read+gilmore2005,
  title = {Mass Loss from Dwarf Spheroidal Galaxies: The Origins of Shallow Dark Matter Cores and Exponential Surface Brightness Profiles},
