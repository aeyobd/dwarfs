}

@article{delgadomena+2021,
  title = {Chemical Abundances of 1111 {{FGK}} Stars from the {{HARPS GTO}} Planet Search Program. {{IV}}. {{Carbon}} and {{C}}/{{O}} Ratios for Galactic Stellar Populations and Planet Hosts},
  author = {Delgado Mena, E. and Adibekyan, V. and Santos, N. C. and Tsantaki, M. and Gonz{\'a}lez Hern{\'a}ndez, J. I. and Sousa, S. G. and {Bertr{\'a}n de Lis}, S.},
  year = {2021},
  month = nov,
  journal = {A\&A},
