  keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics,Cosmology,cosmology: theory,dark matter,galaxies: haloes,methods: numerical,to read},
  annotation = {ADS Bibcode: 2014MNRAS.441.3359D},
