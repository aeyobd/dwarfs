  keywords = {Astrophysics - Astrophysics of Galaxies,Astrophysics - Solar and Stellar Astrophysics,galaxies: dwarf,galaxies: individual (Sculptor),Milky Way,stars: distances,stars: variables: RR Lyrae,techniques: photometric},
