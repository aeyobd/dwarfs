  shorttitle = {Breathing {{FIRE}}},
  author = {{El-Badry}, Kareem and Wetzel, Andrew and Geha, Marla and Hopkins, Philip F. and Kere{\v s}, Dusan and Chan, T. K. and {Faucher-Gigu{\`e}re}, Claude-Andr{\'e}},
